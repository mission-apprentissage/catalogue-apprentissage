## BASE IMAGE
FROM node:20-alpine AS base

ARG CATALOGUE_APPRENTISSAGE_ENV
ARG CATALOGUE_APPRENTISSAGE_BASE_URL
ARG CATALOGUE_APPRENTISSAGE_CANDIDATURE_URL
ARG CATALOGUE_APPRENTISSAGE_ENDPOINT_LBA
ARG CATALOGUE_APPRENTISSAGE_METABASE_URL
ARG CATALOGUE_APPRENTISSAGE_METABASE_SECRET_KEY
ARG CATALOGUE_APPRENTISSAGE_SENTRY_DSN

ENV REACT_APP_ENV=$CATALOGUE_APPRENTISSAGE_ENV
ENV REACT_APP_BASE_URL=$CATALOGUE_APPRENTISSAGE_BASE_URL
ENV REACT_APP_CANDIDATURE_URL=$CATALOGUE_APPRENTISSAGE_CANDIDATURE_URL
ENV REACT_APP_ENDPOINT_LBA=$CATALOGUE_APPRENTISSAGE_ENDPOINT_LBA
ENV REACT_APP_METABASE_URL=$CATALOGUE_APPRENTISSAGE_METABASE_URL
ENV REACT_APP_METABASE_SECRET_KEY=$CATALOGUE_APPRENTISSAGE_METABASE_SECRET_KEY
ENV REACT_APP_SENTRY_DSN=$CATALOGUE_APPRENTISSAGE_SENTRY_DSN

WORKDIR /app
RUN corepack enable &&\
    corepack prepare yarn@stable --activate && \
    yarn set version 4.5.0 && \
    yarn config set nodeLinker node-modules && \
    yarn config set defaultSemverRangePrefix '' && \
    yarn config set --home enableTelemetry 0 && \
    yarn config set compressionLevel mixed

COPY package.json yarn.lock*  ./

## DEPS
FROM base AS deps
RUN yarn install --immutable

## BUILD
FROM base AS builder
COPY --from=deps /app/node_modules/  ./node_modules/
COPY .  ./
RUN yarn build

## RUN
FROM base AS runner
COPY --from=deps /app/node_modules/  ./node_modules/
COPY --from=builder /app/build  ./build/
EXPOSE 3000
CMD yarn serve
